<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text View Styles for Item Titles -->
    <style name="TextView_TitleItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Text View Styles for Item Subtitles -->
    <style name="TextView_SubtitleItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Button Styles -->
    <style name="Button_Welcome">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColor">@color/app_tint</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Button_AddCounter">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ic_add_button</item>
        <item name="android:elevation">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawableLeft">@drawable/ic_add</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>